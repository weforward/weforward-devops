package cn.weforward.devops.user;

import cn.weforward.common.ResultPage;

/**
 * 组织提供者
 * 
 * @author daibo
 *
 */
public interface OrganizationProvider {
	/**
	 * 搜索
	 * 
	 * @param keywords
	 * @return
	 */
	ResultPage<Organization> search(String keywords);

	/**
	 * 获取
	 * 
	 * @param id
	 * @return
	 */
	Organization get(String id);

	/** 当前线程中的会话 */
	public static final ThreadSession TLS = new ThreadSession();

	/**
	 * 在线程中的用户会话（若实现支持的话）
	 * 
	 * @author daibo
	 *
	 */
	public class ThreadSession {
		/** 组织对象 */
		private ThreadLocal<Organization> m_Session;

		/**
		 * 置入组织
		 * 
		 * @param session 用户会话，若为null则清空
		 * @return 旧的会话
		 */
		public Organization put(Organization session) {
			if (null == session) {
				// 清空
				if (null == m_Session) {
					return null;
				}
				Organization old = m_Session.get();
				m_Session.set(session);
				return old;
			}

			Organization old;
			if (null == m_Session) {
				m_Session = new ThreadLocal<Organization>();
				old = null;
			} else {
				old = m_Session.get();
			}
			m_Session.set(session);
			return old;
		}

		/**
		 * 获取组织
		 */
		public Organization get() {
			return null == m_Session ? null : m_Session.get();
		}

		/**
		 * 获取组织id
		 * 
		 * @return ip
		 */
		public String getId() {
			return null == m_Session ? null : m_Session.get().getId();
		}

	}
}
