#!/bin/bash

NAME=$PROJECT_NAME

SERVER_ID=$SERVER_ID

OURLINC_SERVER_ID=$OURLINC_SERVER_ID

if   [ $LOG_PATH ] ;
then 
	LOG_PATH=$LOG_PATH;
else 
	LOG_PATH=./log
fi

RLOG_URL=$RLOG_URL

_term() { 
  kill -TERM $child
  kill_child=$!
  wait "$kill_child"
}
 
trap _term TERM

DEFAULT_JAVA_OPTIONS="-Dweforward.serverid=$SERVER_ID -Dourlinc.serverid=$OURLINC_SERVER_ID -Xss256k -Dsun.net.http.retryPost=false -Dhttp.maxConnections=100 -Drlog.url=$RLOG_URL -Dlog.path=$LOG_PATH -Dproject_name=$NAME"

if   [ -n "$WF_JAVA_OPTIONS" ] ;
then 
	JAVA_OPTIONS=$WF_JAVA_OPTIONS" "$DEFAULT_JAVA_OPTIONS
else 
	JAVA_OPTIONS=$DEFAULT_JAVA_OPTIONS
fi

ulimit -n 10000

java $JAVA_OPTIONS -jar $NAME.jar &

child=$!
wait "$child"